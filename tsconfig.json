{
    "compilerOptions": {
        "lib": [
            "es2017",
            "dom"
        ],
        "target": "es2017",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "jsx": "react",
        "esModuleInterop": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "incremental": true
    },
    "include": [
        "src",
        "tests",
        "scripts"
    ]
}
